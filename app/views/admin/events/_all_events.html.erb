<table class="table table-responsive">
  <thead>
    <tr>
        <th>title</th>
        <th>type</th>
        <th>responsable/speaker</th>
        <th>video</th>
        <th>publish</th>
        <th>edit</th>
        <th>delete</th>
    </tr>
  </thead>
  
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.event_type.name %></td>
        <td>
          <% unless event.speaker.nil? %>
            <%= link_to event.speaker.fullname, speaker_path(event.speaker.id) %>
          <% end %>          
          <% unless event.responsable.nil? %>
            <%= event.responsable %>
          <% end %>
        </td>
        <td>
          <% unless event.video.nil? %>
            <%= link_to 'Video', event.video %>
          <% end %>
        </td>
        <td></td>
        <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
        <td><%= link_to 'Destroy', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>