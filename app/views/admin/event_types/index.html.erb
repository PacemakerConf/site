<p id="notice"><%= notice %></p>
<h1>Event Types</h1>
<table class="table table-responsive display event_type_data_table">
  <colgroup class="index_event_types">
    <col><col><col><col><col><col><col><col><col><col>
  </colgroup>
  <thead>
    <tr>
      <th rowspan='2'>Image</th>
      <th rowspan='2'>Name</th>
      <th rowspan='2'>Description</th>
      <th rowspan='2'>Duration</th>
      <th rowspan='2'>Color</th>
      <th rowspan='2'>Speaker</th>
      <th rowspan='2'>Groupable</th>
      <th colspan='3'class="center-align" style="color:white">Actions</th>
    </tr>
    <tr>
      <th class='unvisible'></th>
      <th class='unvisible'></th>
      <th class='unvisible'></th>
    </tr>
  </thead>

  <tbody>
    <% @event_types.each do |event_type| %>
      <tr id='<%= event_type.name %>_row'>
        <td><span class="glyphicon"><span class="glyphicon<%=classImage(event_type.image)%>"></span></span></td>
        <td><%= event_type.name %></td>
        <td><%= event_type.description %></td>
        <td><%= durationReturn(event_type.default_duration) %></td>
        <td ><span class="btn-xs" style="background-color:<%= event_type.color %>"></span></td>
        <td><span class="glyphicon"><span class="glyphicon<%=trueEventCheck(event_type.speaker_event)%>"></span></span></td>
        <td><span class="glyphicon"><span class="glyphicon<%=trueEventCheck(event_type.groupable)%>"></span></span></td>
        <td><%= link_to 'Show', admin_event_type_path(event_type), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_admin_event_type_path(event_type), class: "btn btn-warning btn-xs"%></td>
        <td><%= link_to 'Delete', admin_event_type_path(event_type), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Event type', new_admin_event_type_path, class: "btn btn-default btn-sm" %>