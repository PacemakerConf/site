<%= form_for( [:admin, @conference], html: {class: 'form-horizontal'} ) do |f| %>

  <div class="form-group">
    <%= f.label :name, "Name*", class: "col-lg-2 control-label"%>
    <div class="col-lg-7">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :'year_id', "Year*", class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
    <%= select_tag "conference[year_id]", options_from_collection_for_select(Year.all, 'id', 'name', @conference.year_id || Year.by_name[-1].id), class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :date, class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <div class="input-group" id='datetimepicker'>
        <%= f.text_field :date, value: @conference.date, class: "form-control" %>
       <span class="input-group-addon glyphicon glyphicon-calendar"></span>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :registration_deadline, class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <div class="input-group" id='datetimepicker_deadline'>
        <%= f.text_field :registration_deadline, placeholder: @conference.registration_deadline, class: "form-control"%>
        <span class="input-group-addon glyphicon glyphicon-calendar"></span>
      </div>
    </div>
  </div>

  <div class="form-group">
   <%= f.label :attenders_count, class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
    <%= f.number_field :attenders, min: "1", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :group_event, class: "col-lg-2 col-md-1 col-sm-1 col-xs-1 control-label" %>
    <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7 ">
    <%= f.check_box :group_event %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Video", class: "col-lg-2 control-label"%>
    <div class="col-lg-7">
      <%= f.text_field :video, placeholder: 'Insert url with video', class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Photo", class: "col-lg-2 control-label"%>
    <div class="col-lg-7">
      <%= f.text_field :photo, placeholder: 'Insert url with photo', class: "form-control" %>
    </div>
  </div>

  <%= f.hidden_field :published, value: false %>

  <div class="form-group">
    <div class="col-lg-7 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Reset</button>
      <%= f.submit @button_name, class: "btn btn-primary"%>
    </div>
  </div>

<% end %>

