<% content_for :title, @conference.fullname %>
<% content_for :conference_active_button, 'location' %>

<div class="row">
  <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
      <h1>Direction map</h1>
    <div class="map">
      <iframe width="580" height="480" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?q=<%= @conference.location.latitude %>,<%= @conference.location.longitude %>&amp;z=15&amp;output=embed"></iframe>
    </div>
  </div>
  <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 address-box ">
       <div class="address-container">
          <h2>Address</h2>
          <p><b>Place Type: </b><%= @location.place_type %></p>
          <p><b>Name: </b><%= @location.name %></p>
          <p><b>Address: </b><%= @location.address %>, <%= @location.city %></p>
      </div>
      <div class="contacts-container">
        <h1>Contacts</h1>
        <% @location.contacts.each do |contact| %>
          <div>
            <p><b><%= contact.name %> <%= contact.surname %></b><p>
             <td><% contact.splited_mail.each do |mail| %>
             <b>Mail:</b><%= mail %><br>
            <% end %></td>
            <p><b>Tel:</b> <%= contact.telephone %></p>
          </div>
        <% end %>
      </div>
        <h1>How To Find</h1>
        <p><%= @location.how_to_find %></p>
  </div>
</div>