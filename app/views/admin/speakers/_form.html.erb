
<%= form_for( [:admin, @speaker],  html: {class: 'form-horizontal'} ) do |f| %>
   
  <% if @speaker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@speaker.errors.count, "error") %> prohibited this speaker from being saved:</h2>

      <ul>
      <% @speaker.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :photo, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= image_tag @speaker.photo.url(:thumb) %>
      <%= f.file_field :photo, class: "btn btn-default" %>
    </div>
  </div>

  <input id="input-42" type="file" multiple=true>
  <script>
  $("#input-42").fileinput({
  maxFilesNum: 10,
  allowedFileExtensions: ["jpg", "gif", "png", "txt"]
  });
  </script>



  <div class="form-group">
    <%= f.label :name, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :surname, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= f.text_field :surname, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :facebook, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= f.text_field :facebook, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :linkedin, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= f.text_field :linkedin, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :site, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= f.text_field :site, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit %>
    </div>
  </div>
<% end %>