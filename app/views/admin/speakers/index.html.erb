<p id="notice"><%= notice %></p>
<h1>Listing Speakers</h1>
<table id="speaker" class="display" width="100%" cellspacing="0">
  <thead>
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Position</th>
        <th>Description</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
<!-- <th colspan="3"> <center>Actions</center></th> not working? -->
    </tr>
  </thead>
  <tfoot>
    <tr>
        <th>Name</th>
        <th>Show</th>
        <th>Position</th>
        <th>Description</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
   </tr>
  </tfoot>
  <tbody>
      <% @speakers.each do |speaker| %>
      <tr>
          <td><%= speaker.name %></td>
          <td><%= speaker.surname %></td>
          <td><%= speaker.position %></td>
          <td><%= speaker.description %></td>
          <td><%= link_to 'Show', admin_speaker_path(speaker.id), class: "btn btn-default btn-xs" %></td>
          <td>
            <% if can? :edit, @speaker %>
            <%= link_to 'Edit', edit_admin_speaker_path(speaker.id), class: "btn btn-warning btn-xs" %>
            <% end %>
          </td>
          <td>
            <% if can? :destroy, @speaker %>
            <%= link_to 'Destroy', admin_speaker_path(speaker), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
            <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#speaker').dataTable({
      paging: true
    });
  });
</script>
<br>


<%= link_to 'Invite speaker', invite_admin_speakers_path, class: "btn btn-default btn-sm" %>

<% if can? :create, Speaker %>
<%= link_to 'New speaker', new_admin_speaker_path, class: "btn btn-default btn-sm" %>
<% end %>
