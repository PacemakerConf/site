
<h1>Listing Speakers</h1>
<table id="speaker" class="display" width="100%" cellspacing="0">
  <thead>
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Positioin</th>
        <th>Description</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
<!-- <th colspan="3"> <center>Actions</center></th> not working? -->
    </tr>
  </thead>
  <tfoot>
    <tr>
        <th>Name</th>
        <th>Show</th>
        <th>Positioin</th>
        <th>Description</th>
        <th>Surname</th>
        <th>Edit</th>
        <th>Delete</th>
   </tr>
  </tfoot>
  <tbody>
      <% @speakers.each do |speaker| %>
      <tr>
          <td><%= speaker.name %></td>
          <td><%= speaker.surname %></td>
          <td><%= speaker.position %></td>
          <td><%= speaker.description %></td>
          <td><%= link_to 'Show', admin_speaker_path(speaker.id) %></td>
          <td><%= link_to 'Edit', edit_admin_speaker_path(speaker.id) %></td>
          <td><%= link_to 'Destroy', admin_speaker_path(speaker), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#speaker').dataTable({
      paging: true
    });
  });
</script>
