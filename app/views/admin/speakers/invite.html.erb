<legend>Invite speaker</legend>

<%= form_tag("/admin/speakers/send", method: "post") do %>
<div class="form-group">
  <%= label_tag(:email, "Email", class: "col-lg-2 control-label") %>
  <div class="col-lg-10">
    <%= text_field_tag( :email) %><br><br>
  </div>
</div>

 <div class="form-group">
      <%= label_tag(:conference_id, "Conference", class: "col-lg-2 control-label") %><br>
    <div class="col-lg-10">
        <%= select_tag :conference_id, options_from_collection_for_select(Conference.where(date: Time.now..'3000-12-12'), 'id', 'fullname'), class: "form-control" %><br>
        </div>
    </div>

<div class="form-group">
  <%= label_tag(:message, "Message", class: "col-lg-2 control-label") %><br>
    <div class="col-lg-10">
      <%= text_area_tag(:message, invite_message, size: "15x6", class: "form-control") %><br>
	</div>
</div>

<div class="actions">
  <div class="col-lg-10 col-lg-offset-2">
    <%= submit_tag("Send") %>
  </div>
</div>
<% end %>

 
<%= link_to 'Back', admin_speakers_path %>