<legend>Invite speaker</legend>

<%= form_tag("/admin/speakers/send", method: "post", class: 'form-horizontal') do %>

<div class="form-group">
  <%= label_tag(:email, "Email", class: "col-lg-2 control-label") %>
  <div class="col-lg-7">
    <%= email_field :email, class: "form-control" %>
  </div>
</div>

  <div class="form-group">
      <%= label_tag(:conference_id, "Conference", class: "col-lg-2 control-label") %>
    <div class="col-lg-7">
        <%= select_tag 'location[conference_id]', options_from_collection_for_select(Conference.all, 'id', 'fullname'), class: "form-control" %>
        </div>
  </div>

<div class="form-group">
  <%= label_tag(:message, "Message", class: "col-lg-2 control-label") %>
    <div class="col-lg-7">
      <%= text_area_tag(:message, invite_message, size: "15x6", class: "form-control") %>
	</div>
</div>

<div class="form-group">
  <div class="col-lg-7 col-lg-offset-2">
    <%= submit_tag("Send", class: "btn btn-primary") %>
  </div>
</div>
<% end %>

 
<%= link_to 'Back', admin_speakers_path %>