<!-- DataTables CSS -->
<link rel="stylesheet" type="text/css" href="vendor/assets/dataTables/css/jquery.dataTables.css">
<!-- DataTables -->
<script type="text/javascript" charset="utf8" src="vendor/assets/dataTables/js/jquery.dataTables.js"></script> 
<!-- jQuery -->
<script type="text/javascript" src="vendor/assets/javascripts/jquery-1.11.2.js"></script>

<h1>Listing Reports</h1>
<table id="report" class="display" width="100%" cellspacing="0">
  <thead>
    <tr>
        <th>Responsable</th>
        <th>Title</th>
        <th>Description</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
        <th>Responsable</th>
        <th>Title</th>
        <th>Description</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
   </tr>
  </tfoot>
  <tbody>
       <% @reports.each do |report| %>
      <tr>
        <td><%= report.responsable %></td>
        <td><%= report.title %></td>
        <td><%= report.description.html_safe %></td>
        <td><%= link_to 'Show', admin_report_path(report) %></td>
        <td><%= link_to 'Edit', edit_admin_report_path(report) %></td>
        <td><%= link_to 'Destroy', admin_report_path(report), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#report').dataTable({
      paging: true
    });
  });
</script>

