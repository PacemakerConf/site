<h1>Invitation messages</h1>
<table class="display message_data_table" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Version</th>
      <th>Content</th>
      <th>Action</th> 
    </tr>
  </thead>
  <tbody>
    <%  @messages.each do |message| %>
    <tr >
      <td><%= message.version %></td>
      <td><%= message.content.html_safe %></td>
      <td>
        <% if message.version == Message.first.version%>
          Activated
        <% else %>
          <%= link_to 'SwitchTo', switch_to_admin_message_path(message), class: 'btn btn-xs btn-warning' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

