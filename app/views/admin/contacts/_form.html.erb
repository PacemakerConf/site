<%= nested_form_for( [:admin, @contact],  html: {class: 'form-horizontal'} ) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-lg-2 control-label"%>
    <div class="col-lg-7">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
      <%= f.label :surname, class: "col-lg-2 control-label"%>
      <div class="col-lg-7">
        <%= f.text_field :surname, class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :telephone, class: "col-lg-2 control-label"%>
    <div class="col-lg-7">
      <%= f.text_field :telephone, class: "form-control" %>
    </div>
  </div>
    <div>
      <% f.fields_for :telephones do |form| %>
      <%= form.label :number, "Number" %><br />
      <%= form.text_field :number%>
      <%= form.link_to_remove "Remove" %>
      <% end %>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.link_to_add "Add", :telephones, class: "btn-default btn-sm"%>
        </div> 
    </div> 
  </div>
    <div class="form-group">
      <%= f.label :email, class: "col-lg-2 control-label"%>
      <div class="col-lg-7">
        <%= f.text_field :email, class: "form-control" %>
      </div>
  </div>
      <div class="form-group">
    <%= f.label :skype, class: "col-lg-2 control-label"%>
    <div class="col-lg-7">
      <%= f.text_field :skype, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit class: "btn btn-primary"%>
    </div>
  </div>
<% end %>




