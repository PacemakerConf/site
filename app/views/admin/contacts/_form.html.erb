<%= nested_form_for( [:admin, @contact],  html: {class: 'form-horizontal'} ) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-lg-2 control-label"%>
    <div class="col-lg-7">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :surname, class: "col-lg-2 control-label"%>
      <div class="col-lg-7">
        <%= f.text_field :surname, class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
    <%= f.label :telephone, class: "col-lg-2 control-label"%>
    <div class="col-lg-7">
      <%= f.text_field :telephone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :email, class: "col-lg-2 control-label"%>
      <a class="btn-default btn-sm btn-warning" id ="add_button" onclick="addMailRow(this);return false;">+</a>
      <div class="col-lg-7">
        <input class="form-control mail-adreess" >
      </div>
  </div>
  
  <div class="form-group" id="mail-area"></div>
  <input type="hidden" name="contact[email]" value="">
  
      <div class="form-group">
    <%= f.label :skype, class: "col-lg-2 control-label"%>
    <div class="col-lg-7">
      <%= f.text_field :skype, class: "form-control" %>
    </div>
    </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit onclick: "return checkIsValid();",class: "btn btn-primary"%>
    </div>
  </div>
<% end %>


<script type="text/javascript">

  function addMailRow(){
    var divHTML = 
    '<div class="form-group ">'+
     '<label class="col-lg-2 control-label label_contact">Email</label>'+
      '<div class="col-lg-7 contact_form">'+
        '<input class="form-control mail-adreess" type="text" >'+
      '</div>'+
      '<a class="remove_nested_fields btn-default btn-sm btn-danger" id="remove_button_contact" onclick="RemoveMail(this);return false;">-</a>'+
    '</div>';
    $("#mail-area").append(divHTML);

  
  } 

  function RemoveMail(button){
    $(button).parent().remove();
  }


  function checkIsValid(){
    var mails = '';
    var emailRegEx = /^[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,4}$/i;
    var isPassed = true;
      $('.mail-adreess').each(function(index,obj){
        if($(obj).val() != '' && $(obj).val().search(emailRegEx) != -1)
          mails+=$(obj).val()+';';
        else
          isPassed = false;
      });

      if(isPassed)
        $('[name="contact[email]"]').val(mails);
      else
         alert('Please enter a valid email address.');

      return isPassed;
  }
  
  
</script>




