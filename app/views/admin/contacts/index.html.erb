<p id="notice"><%= notice %></p>
<h1>Contacts</h1>
<table class="display data_table" width="100%" cellspacing="0">
  <thead>
    <tr>
        <th rowspan='2'>Name</th>
        <th rowspan='2'>Surname</th>
        <th rowspan='2'>Telephone</th>
        <th rowspan='2'>Email</th>
        <th rowspan='2'>Skype</th>
        <th colspan='2' class='center-align'>Actions</th>
    </tr>
    <tr>
      <th class='unvisible'></th>
      <th class='unvisible'></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.surname %></td>
        <td><% contact.splited_telephone.each do |telephone| %>
             <%= telephone %><br>
            <% end %></td>
         <td><% contact.splited_mail.each do |mail| %>
             <%= mail %><br>
            <% end %></td>
        <td><%= contact.skype %></td>
        <td><%= link_to 'Edit', edit_admin_contact_path(contact), class: 'btn btn-xs btn-warning' %></td>
        <td><%= link_to 'Delete', admin_contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Contact', new_admin_contact_path, class: "btn btn-default btn-sm"  %>
