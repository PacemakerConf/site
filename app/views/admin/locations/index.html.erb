<p id="notice"><%= notice %></p>
<h1>Listing Locations</h1>
<table class="display data_table" width="100%" cellspacing="0">
  <thead>
    <tr>
        <th>Place Type</th>
        <th>Name</th>
        <th>City</th>
        <th>Address</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
        <th>Place Type</th>
        <th>Name</th>
        <th>City</th>
        <th>Address</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
   </tr>
  </tfoot>
  <tbody>
       <% @location.each do |location| %>
      <tr>
        <td><%= location.place_type %></td>
        <td><%= location.name %></td>
        <td><%= location.city %></td>
        <td><%= location.address %></td>
        <td><%= link_to 'Show', admin_location_path(location) %></td>
        <td><%= link_to 'Edit', edit_admin_location_path(location) %></td>
        <td><%= link_to 'Destroy', admin_location_path(location), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Location', new_admin_location_path %>


