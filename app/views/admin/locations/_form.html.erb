<%= form_for [:admin, @location],  html: {class: 'form-horizontal'}  do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <% if params['conf_id'] %>
    <div class="col-lg-7">
      <h4>Conference:  <%= params['conf_fname'] %></h4>
    </div>
      <%= hidden_field( :location, :conference_id, value: params['conf_id']) %>
      <% else %>
        <%= f.label :conference_id, 'Conference', class: "col-lg-2 control-label" %>
        <div class="col-lg-7">
          <%= select_tag 'location[conference_id]', options_from_collection_for_select(Conference.all, 'id', 'fullname'), class: "form-control" %>
        </div>
      <% end %>
  </div>

  <div class="form-group">
    <%= f.label :place_type, class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <%= f.text_field :place_type, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city, class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <%= f.text_field :city, class: "form-control adr" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address, class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <%= f.text_field :address, class: "form-control adr" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "map", class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <div id="map"></div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :contact_id, 'Contact', class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <%= select_tag 'location[contact_ids][]', options_from_collection_for_select(@contacts, 'id', :full_name), class: "form-control" %>
      <div class="form-group" id="location-area"></div>
    </div>
  </div>

  <%= render "admin/partials/wysiwyg" %> 

  <div class="form-group">
    <%= f.label :how_to_find, class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <div id="editor" class="well col-md-9 form-control"></div>
    </div>
      <%= hidden_field( :location, :how_to_find, value:"") %>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit class: "btn btn-primary"%>
    </div>
  </div>
<% end %>


<script type="text/javascript">

    $('#location_contact_ids_').removeAttr('id','none').attr("multiple", "multiple").attr("title","Select a contact");

    jQuery(function($) {
      $("select[multiple]").bsmSelect();
    });

    jQuery(function($) {
    $("select[multiple]").bsmSelect({
      addItemTarget: 'top'
    });
    });

    $('#editor').wysiwyg();
 
    $('[name="commit"]').click(function(){
      info = $('#editor').html();
      $('[name="location[how_to_find]"]').val(info);
    });


    var map ;

  if($("#map").length)
    map = new GMaps({
          div: '#map',
          lng: 18.5009765625,
          lat: 48.31242790407185,
          zoom: 16
      });

$(".adr").keyup (function(){
    var splitedResult = '';
  $.each($(".adr"),function(index,obj){
    splitedResult += $(obj).val();
    if(!index)
      splitedResult += ','; 
    })

  GMaps.geocode({
    address: splitedResult,
    callback: function(results, status) {
      if (status == 'OK') {
        var latlng = results[0].geometry.location;
        map.setCenter(latlng.lat(), latlng.lng());
        map.removeMarkers();
        map.addMarker({
          lat: latlng.lat(),
          lng: latlng.lng()
          });
        }
      }
  });
});

</script>




