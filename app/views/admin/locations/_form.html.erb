<%= form_for [:admin, @location],  html: {class: 'form-horizontal'}  do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <% if params['conf_id'] %>
      <div class="col-lg-7">
        <h4>Conference:  <%= params['conf_fname'] %> </h4>
      </div>
        <%= hidden_field( :location, :conference_id, value: params['conf_id']) %>
      <% else %>
        <%= f.label :conference_id, 'Conference', class: "col-lg-2 control-label" %>
        <div class="col-lg-7">
        <%= select_tag 'location[conference_id]', options_from_collection_for_select(Conference.all, 'id', 'fullname'), class: "form-control" %>
        </div>
      <% end %>
   </div>

  <div class="form-group">
    <%= f.label :place_type, class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <%= f.text_field :place_type, class: "form-control" %>
    </div>
  </div>
   <div class="form-group">
    <%= f.label :name, class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
   <div class="form-group">
    <%= f.label :city, class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :contact_id, 'Contact', class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      
      <%= select_tag 'location[contact_ids][]', options_from_collection_for_select(@contacts, 'id', :full_name) %>
      <a class="btn-default btn-sm btn-warning" id="add_location" onclick="addContact(this);return false;">+</a>
      <div class="form-group" id="location-area"></div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :how_to_find, class: "col-lg-2 control-label" %>
    <div class="col-lg-7">
      <%= f.text_area :how_to_find, class: "form-control wysihtml5" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit class: "btn btn-primary"%>
    </div>
  </div>
<% end %>


<script type="text/javascript">

    function addContact(){
      var divHTML = $('#location_contact_ids_')[0].outerHTML;
      divHTML = '<div id="new_select">' + divHTML +
      '<a class="remove_nested_fields btn-default btn-sm btn-danger" id="remove_button_location" onclick="RemoveContact(this);return false;">-</a>'+
      "</div>";
      $("#location-area").append(divHTML);


  } 

  function RemoveContact(button){
    $(button).parent().remove();
  }
  


    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5().html_safe();
    });
</script>




