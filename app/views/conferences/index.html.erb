
<!-- DataTables CSS -->
<link rel="stylesheet" type="text/css" href="vendor/assets/dataTables/css/jquery.dataTables.css">
<!-- DataTables -->
<script type="text/javascript" charset="utf8" src="vendor/assets/dataTables/js/jquery.dataTables.js"></script> 
<!-- jQuery -->
<script type="text/javascript" src="vendor/assets/javascripts/jquery-1.11.2.js"></script>

<h1>Listing Conferences</h1>
<table id="conference" class="display" width="100%" cellspacing="0">
  <thead>
    <tr>
        <th>Conference Name</th>
        <th>Year</th>
        <th>Date</th>
        <th>Attenders</th>
        <th>Location</th>
        <th>Report</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
<!-- <th colspan="3"> <center>Actions</center></th> not working? -->
    </tr>
  </thead>
  <tfoot>
    <tr>
        <th>Conference Name</th>
        <th>Year</th>
        <th>Date</th>
        <th>Attenders</th>
        <th>Location</th>
        <th>Report</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
   </tr>
  </tfoot>
  <tbody>
      <% @conferences.each do |conference| %>
      <tr>
          <td><%= conference.name %></td>
          <td><%= conference.year %></td>
          <td><%= conference.date %></td>
          <td><%= conference.attenders %></td>
          <td><%= conference.location.address %></td>
          <td><%= conference.report %></td>
          <td><%= link_to 'Show', conference_path(conference.name.to_s + "-" + conference.year.to_s) %></td>
          <td><%= link_to 'Edit', edit_conference_path(conference.name.to_s + "-" + conference.year.to_s) %></td>
          <td><%= link_to 'Destroy', conference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#conference').dataTable({
      paging: true
    });
  });
</script>

