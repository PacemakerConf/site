<% @speakers.each do |speaker| %>

	<div class = 'full-speaker-container'>
		<div class = 'speaker-photo'></div>
		<div class = 'speaker-about'>
			<div><%= speaker.name %></div>
			<div>paragraph about speaker. a bit of text</div>
		</div>
		<div class = 'speech-about'>
			<div><%= speaker.events.where(conference_id: params[:id])[0].title %></div>
			<div>paragraph about topic. a bit of text</div>
		</div>
	</div>

<% end %>