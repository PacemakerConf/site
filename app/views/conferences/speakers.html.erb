<% content_for :title, "Pacemaker: " + 	@conference.fullname %>

<% @speakers.each do |speaker| %>

	<div class="row speakers-det">
		<div class = 'full-speaker-container col-lg-7 col-md-7 col-xs-7'>
			<div class = 'speaker-photo'>
				<%= image_tag( speaker.photo.url(:thumb), class: 'photo', alt: speaker.name ) %>
			</div>
			<div class = 'speaker-about'>
				<div class='speaker-name speech-info'>
					<%= link_to speaker.fullname, speaker_path(speaker) %>
				</div>
				<div><%= speaker.description %></div>
			</div>	
		</div>

		<div class = 'speech-about col-lg-5 col-md-5 col-xs-5'>
			<div><strong><%= speaker.events.where(conference: @conference)[0].title %></strong></div>
			<div><%= speaker.events.where(conference: @conference)[0].description %></div>
		</div>
	</div>

<% end %>