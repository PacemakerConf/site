<div class="row">
  <div class="col-lg-9 map">
   <h1>Direction map</h1>
      <iframe width="580" height="480" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.com/maps?q=<%= @location.latitude %>,<%= @location.longitude %>&amp;z=15&amp;output=embed"></iframe>
  </div>
  <div class="col-lh-3 adress">
        <h1>Address</h1>
          <p><b>Place Type: </b><%= @location.place_type %></p>
          <p><b>Name: </b><%= @location.name %></p>
          <p><b>Address: </b><%= @location.address %>, <%= @location.city %></p>
        <h1>Contacts</h1>
        <% @location.contacts.each do |contact| %>
          <div>
            <p><b><%= contact.name %> <%= contact.surname %></b><p>
            <p><b>Mail:</b> <%= contact.email %></p>
            <p><b>Tel:</b> <%= contact.telephone %></p>
          </div>
        <% end %>
  </div>
</div>




