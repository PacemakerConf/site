 <!--   <link type="text/css" href="vendor/assets/stylesheets/jquery.simple-dtpicker.css" rel="stylesheet" />  
    -->
    <script type="text/javascript" src="vendor/assets/javascripts/jquery.datetimepicker.js"></script>
    <link type="text/css" href="vendor/assets/stylesheets/jquery.datetimepicker.css" rel="stylesheet" />

 </head>
 <body>
<input id="datetimepicker" type="text" >

<%= form_for(@conference) do |f| %>
  <% if @conference.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@conference.errors.count, "error") %> prohibited this conference from being saved:</h2>

      <ul>
      <% @conference.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, size: "30x12" %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= select_year(Time.now) %>
  </div>
  <div class="field" id = "datetimepicker" >
    <%= f.label :date %><br>
    <%= select_date Date.today, prefix: :start_date %><br>
    <%= f.text_field :date, :id => "datetimepicker" %>
  </div>
  <div class="field">
    <%= f.label :attenders_count %><br>
    <%= f.number_field :attenders, size: "30", min: "1" %>
  </div>
  <div class="actions">
  <%= f.submit 'Create' %>
  </div>
<% end %>
 </body>

    <script type="text/javascript">
        $(document).ready(function() {
        $('#datetimepicker').datetimepicker();
        });
     
    </script>

<%= link_to 'Back', conferences_path %>
 </html>