<% deadline = @conference.registration_deadline || @conference.date %>
<% if deadline && (deadline > Time.now) %>
    <div class="table table-responsive col-md-10">
    	<!--<%= label_tag '', nil, class: 'col-md-5' %>-->
    	<!-- Button trigger modal -->
    	<button type="button" class="btn btn-primary btn-md call-for-speaker" data-toggle="modal" data-target="#myModal"><strong>CALL FOR SPEAKER!</strong>
    	</button>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" aria-hidden="true"><span>&times;</span></button>
                    <h3 class="modal-title" id="myModalLabel">Request for speaker</h3>
                </div>
                <div id='success-sent' class = '' > 
                </div>
                <div class="modal-body form-group">
                	<%= form_tag(send_mail_path, remote: true) do %>
                        <div class="form-group">
                            <%= label_tag 'name', 'Name and Surname' %>
                            <%= text_field_tag 'name', nil, class: 'form-control col-lg-3 control-label', placeholder: 'Your Name and Surname', required: true %>
                        </div>
                        <div class="form-group">
                            <%= label_tag 'email', 'Email' %>
                            <%= email_field_tag :email, nil, class: 'form-control col-lg-3 control-label', id: 'mail-address', placeholder: 'Your Email Address', required: true %>
                        </div>
                        <div>
                            <%= label_tag 'comment', 'Comment' %>
                            <%= text_area_tag 'comment', nil, class: 'form-control col-lg-3 control-label', rows: 1, placeholder: 'Comment...', required: true %>
                        </div>
                        <div class="modal-footer"></div>
                        <button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
                        <input type="submit" value="Send" class="btn btn-primary">
                    <% end %>
                </div>
            </div>
        </div>
    </div>
<% end %>