<div class="container header">
	<div class="col-lg-7 col-md-8 col-sm-7 col-xs-8">
		<div class="blockquotes-container">
				<h4>
						<br />
						It takes all the running you can do, to keep in the same place.
						<br />
						If you want to get somewhere else, you must run at least twice as fast as that!

						<br /><i class="pull-right">
						- Red Queen
						</i>
			</h4>
		</div>
	</div>		
	<div class="col-lg-2 col-md-2 col-sm-5 col-xs-4 logo-img" >
		<%= image_tag("pacemaker_logo.png") %>
	</div>
	<div class="col-lg-3 hidden-md hidden-sm hidden-xs next-pacemaker" >
		<a href="<%= nearest_conference_path %>">
			<div class="row">
				<div class="col-lg-5">
					<div class="round"></div>
				</div>
				<div class="col-lg-7">
					<span class="title">
						Next pacemaker
					</span>
					<h4 class="body">
						<b><%= nearest_conference.try(:name) || 'Coming soon'%></b>
					</h4>
				</div>
			</div>
		</a>
	</div>
</div>