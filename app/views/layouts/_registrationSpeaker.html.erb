<div class="table table-responsive">
	<div class="form-group">
		<%= label_tag 'Registration Deadline', class: 'col-lg-2 control-label' %>

 		<!-- Button trigger modal -->
  		<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal"><strong>CALL FOR SPEAKER!</strong>
  		</button>

	</div>
</div>

  <!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    	<div class="modal-content">
    	       <%= form_tag(send_mail_path) do %>
			<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		    <h3 class="modal-title" id="myModalLabel">Request for speaker</h3>
		    </div>
	    	<div class="modal-body form-group">
		    	<%= label_tag 'Apply for Speaker', 'Email', class: 'col-lg-2 control-label' %>
				<%= email_field_tag :email %>

<!-- 				, autofocus: true, class: 'form-control', placeholder: "email", id: 'login_email' -->

		    </div>
		    <div class="modal-footer">
		        <button type="submit" class="btn btn-primary" data-dismiss="modal" method="post" {@email}>Send</button>
		        <%= submit_tag("Send", class: 'btn btn-primary') %>
		        <!-- :controller => "speaker_request", :action => "send_order_mail", :id => @order.id-->
		        <% end %>
	    	</div>
	    </div>	
    </div>
</div>

