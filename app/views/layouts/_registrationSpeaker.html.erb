<% if @conference.date > Time.now %>
<div class="table table-responsive row col-md-10">
   		<%= label_tag 'Registration Deadline ' + @conference.date.to_s, nil, class: 'col-md-5', style: 'font-size: 18pt' %>
 		<!-- Button trigger modal -->
  		<button type="button" class="btn btn-primary btn-lg col-md-5" data-toggle="modal" data-target="#myModal"><strong>CALL FOR SPEAKER!</strong>
  		</button>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog">
      <div class="modal-content">
      	 <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" aria-hidden="true"><span>&times;</span></button>
            <h3 class="modal-title" id="myModalLabel">Request for speaker</h3>
         </div>
         <div class="modal-body form-group">
            <%= label_tag 'Apply for Speaker', nil, class: 'col-lg-3 control-label' %>
            <%= email_field_tag :email, nil, placeholder: 'Email' %>
         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
        	<button type="submit" class="btn btn-primary" data-dismiss="modal" id="submit_btn" method="post">Send</button> 

            <%= submit_tag("Send", class: 'btn btn-primary', :controller => "speaker_request", :action => "send_mail") %>
         </div>
      </div>
   </div>
</div>
<div>
	<%= form_tag send_mail_path(@profile), method: :put do %>
    <%= email_field_tag :email, nil, placeholder: 'Email', class: 'col-lg-3 control-label' %>
	<%= submit_tag("Send", class: 'btn btn-primary', :controller => "speaker_request_controller", :action => "send_mail") %>
	<%= link_to "Send Email", send_mail_path, class: 'btn btn-primary' %>
</div>
           
