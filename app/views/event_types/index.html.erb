<p id="notice"><%= notice %></p>

<h1>Listing Event Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Defaultduration</th>
      <th>Color</th>
      <th>Image</th>
      <th>Speakerevent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_types.each do |event_type| %>
      <tr>
        <td><%= event_type.name %></td>
        <td><%= event_type.description %></td>
        <td><%= event_type.defaultDuration %></td>
        <td><%= event_type.color %></td>
        <td><%= event_type.image %></td>
        <td><%= event_type.speakerEvent %></td>
        <td><%= link_to 'Show', event_type %></td>
        <td><%= link_to 'Edit', edit_event_type_path(event_type) %></td>
        <td><%= link_to 'Destroy', event_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

