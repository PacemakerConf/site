<p id="notice"><%= notice %></p>

<table>
  <tbody>
    <tr>
      <th>Name:</th>
      <td><%= @event_type.name %></td>
    </tr>
    <tr>
      <th>Description:</th>
      <td><%= @event_type.description %></td>
    </tr>

    <tr>
      <th>Defaultduration:</th>
      <td><%= @event_type.defaultDuration %></td>
    </tr>

    <tr>
      <th>Color:</th>
      <td><span class="btn-xs" style="background-color:<%= @event_type.color %>"></span></td>
    </tr>

    <tr>
      <th>Image:</th>
      <td><span class="glyphicon"><span class="glyphicon<%=classImage(@event_type.image)%>"></span></span></td>
    </tr>

    <tr>
      <th>Speakerevent:</th>
      <td><span class="glyphicon"><span class="glyphicon<%=speakerEventCheck(@event_type.speakerEvent)%>"></span></span></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_event_type_path(@event_type), class: "btn btn-default btn-sm" %>
<%= link_to 'Back', event_types_path, class: "btn btn-default btn-sm" %>

