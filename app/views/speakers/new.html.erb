<!-- Speaker register -->
<h1>New speaker</h1>

<div class="container">
    <div class="row">
        <form role="form">
            <div class="col-lg-6">

            	 <div class="form-group">
                    <label for="InputEvent">Event type*</label>
                    <div class="input-group">
                       <select class="form-control" id="select">
          					<option>Lightning task (15 min)</option>
         					<option>Topic with Q/A (1 hour)</option>
        				</select>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="InputName">Name*:</label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="InputName" id="InputName" placeholder="e.g. Taras" required>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="InputSurname">Surname*:</label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="InputSurname" id="InputSurname" placeholder="e.g. Popovych" required>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>

	                <div class="form-group">
                    <label for="InputMessage">Enter Message:</label>
                    <div class="input-group">
                        <textarea name="InputMessage" id="InputMessage" class="form-control" rows="5" required></textarea>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    </div>
                </div>
                <input type="submit" name="submit" id="submit" value="Submit" class="btn btn-info pull-right">
                <button type="reset" class="btn btn-info pull-right">Cancel</button>

            </div>
        </form>

    </div>
</div>

