	<div class='speaker-container one-speaker'>
		<div class = 'speaker-photo'>
     				PHOTO
     			</div>
		<div class='speaker-name'>
			<%= @speaker.name %>
			<%= @speaker.surname %>
		</div>
		<div class="speaker-description">
			<p><%= @speaker.description %></p>
		</div>
		<ul class="speaker-contacts">
			<li><a  <%= @speaker.email %> > <img src="/assets/twitter13.svg"></a></li>
	    	<li><a <%= @speaker.facebook %> > <img src="/assets/facebook29.svg"></a></li>
			<li><a <%= @speaker.linkedin %> > <img src="/assets/linkedin12.svg"></a></li>
			<li><a> <%= @speaker.site %></a></li>
		</ul>
		<hr>
	</div>
	<div class = 'speeches-list'>

		<% @speaker.events.order(timeStart: :desc).each do |speech| %>
		<% if Time.now < speech.timestart %>
			<!-- ongoing -->
		<div class='ongoing-speech-container'>
			<div class='speech-conference'>
				<% conf = speech.conference.name.to_s + "-" + speech.conference.year.to_s %>					<h3> <%= link_to speech.conference.name, about_conference_path( conf ) %> </h3>	
			</div>

			<div class='speech-details'>
				<h2> <%= speech.title %> </h2>
				<h4>
					<%= speech.description %>
				</h4>
			</div>
		</div>
		<% else %>
			<!-- old speeches -->
		<div class='speech-container'>
			<div class='speech-conference'>
				<% conf = speech.conference.name.to_s + "-" + speech.conference.year.to_s %>					<h3> <%= link_to speech.conference.name, about_conference_path(conf) %> </h3>	
			</div>
			<div class='speech-details'>
				<h2> <%= speech.title %> </h2>
				<h4> 
					<%= speech.description %>
				</h4>
			</div>
		</div>
		<% end %>		
		<% end %>		
	</div>
