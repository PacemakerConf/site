
<!-- DataTables CSS -->
<link rel="stylesheet" type="text/css" href="vendor/assets/dataTables/css/jquery.dataTables.css">
<!-- DataTables -->
<script type="text/javascript" charset="utf8" src="vendor/assets/dataTables/js/jquery.dataTables.js"></script> 
<!-- jQuery -->
<script type="text/javascript" src="vendor/assets/javascripts/jquery-1.11.2.js"></script>

<h1>Listing Speakers</h1>
<table id="speaker" class="display" width="100%" cellspacing="0">
  <thead>
    <tr>
        <th>Name</th>
        <th>Surame</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
<!-- <th colspan="3"> <center>Actions</center></th> not working? -->
    </tr>
  </thead>
  <tfoot>
    <tr>
        <th>Name</th>
        <th>Surame</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
   </tr>
  </tfoot>
  <tbody>
      <% @speakers.each do |speaker| %>
      <tr>
          <td><%= speaker.name %></td>
          <td><%= speaker.surname %></td>
          <td><%= link_to 'Show', speaker_path(speaker.name) %></td>
          <td><%= link_to 'Edit', edit_speaker_path(speaker.name) %></td>
          <td><%= link_to 'Destroy', speaker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#speaker').dataTable({
      paging: true
    });
  });
</script>
