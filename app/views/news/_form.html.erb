<%= form_for [:admin, @news], :html => { :class => "form-horizontal year" } do |f| %>

    <% if @news.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
      <div class="panel-content">
        <ul>
        <% @news.errors.full_news.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %> 

    <div class="form-group">
      <%= f.label :title, 'Title', class: "col-lg-2 control-label"%>
      <div class="col-lg-7">
        <%= f.text_field :content, class: "form-control", rows: 2 %>
      </div>
    </div>

  <div class="form-group">
    <%= f.label :content, 'Description', class: "col-lg-2 control-label"%>
    <div class="col-lg-7">
      <%= f.text_area :content, class: "form-control", rows: 2 %>
    </div>
  </div>


<% end %>


