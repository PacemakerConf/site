<% if can? :create, News %>
  <% if @conference %>
    <%= link_to 'New news', controller: 'admin/news', 
                             action: 'new',
                             conf_id: @conference.id,
                             conf_fname: @conference.fullname %>
  <% else %>
      <%= link_to 'New message', controller: 'admin/news', 
                             action: 'new' %>
  <% end %>
<% end %>