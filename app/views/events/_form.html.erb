<%= form_for [@event],  html: {class: 'form-horizontal'}  do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :event_type_id, 'Event type*', class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <% event_type_id = @event.event_type_id || 1 %>
      <%= select_tag 'event[event_type_id]', options_from_collection_for_select(EventType.where(speakerEvent: true), 'id', 'name', event_type_id), class: "form-control", onchange: 'getDefaultDuration()', speakerEvent: EventType.find(event_type_id).speakerEvent %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title, 'Name*', class: "col-lg-2 control-label"%>
    <div class='col-lg-10'>
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= f.text_area :description, class: "form-control", rows: "2" %>
    </div>
  </div>

  <div class="form-group" id='event_materials_group'>
    <%= f.label :materials, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= f.file_field :materials, class: "btn btn-default file_input" %>
    </div>
  </div>
  
  <%= f.hidden_field :conference_id, value: @conference_id %> 
  <%= f.hidden_field :published, value: false %>
  <%= f.hidden_field :speaker_id, value: params[:speaker_id] %>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit class: "btn btn-primary"%>
    </div>
  </div>
<% end %>

<script type = "text/javascript">

  $("#add_button").click(function() {
     var divHTML = 
      '<div class="form-group ">'+
       '<label class="col-lg-2 control-label label_contact">Form</label>'+
        '<div class="col-lg-7 contact_form">'+
          '<input class="form-control mail-adreess" type="text" >'+
        '</div>'+
        '<a class="remove_nested_fields btn-default btn-sm btn-danger" id="remove_button_contact" onclick="RemoveMail(this);return false;">-</a>'+
      '</div>';
      $("#mail-area").append(divHTML);
  });

  
  function RemoveMail(button){
    $(button).parent().remove();
  }

</script>