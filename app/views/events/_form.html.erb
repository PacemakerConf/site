<%= form_for [@event],  html: {class: 'form-horizontal'}  do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field( :event, :conference_id, value: params["conf_id"] || 
      if( @event.conference ) then @event.conference.id end || Conference.last.id )%> 

  <div class="form-group">
    <%= f.label :event_type_id, 'Event type*', class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <% event_type_id = @event.event_type_id || 1 %>
      <%= select_tag 'event[event_type_id]', options_from_collection_for_select(EventType.all, 'id', 'name', event_type_id), class: "form-control", onchange: 'getDefaultDuration()', speakerEvent: EventType.find(event_type_id).speakerEvent %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title, 'Name*', class: "col-lg-2 control-label"%>
    <div class='col-lg-10'>
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= f.text_area :description, class: "form-control", rows: "2" %>
    </div>
  </div>

  <div class="form-group" id='event_materials_group'>
    <%= f.label :materials, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= f.file_field :materials, class: "btn btn-default" %>
      <script>
        $("#event_materials").fileinput({
        maxFilesNum: 1
        });
      </script>
     </div>
  </div>

  <%= f.hidden_field :published, value: false %>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= link_to 'Back', admin_events_path, class: "btn btn-default" %>
      <%= f.submit class: "btn btn-primary"%>
    </div>
  </div>
<% end %>